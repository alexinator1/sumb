# Test Environment Configuration
# Copy this file to .env.test and adjust values if needed

# Database Configuration
# For local testing: use localhost:5433 (mapped from container's 5432)
# For Docker testing: use postgres-test:5432
DB_HOST=localhost
DB_PORT=5433
DB_USER=postgres
DB_PASSWORD=test_password
DB_NAME=sumb_test
DB_SSLMODE=disable

# Backend Configuration
BACKEND_PORT=8081
BACKEND_DEBUG_PORT=40001
SERVER_PORT=8081
DEBUG_PORT=40001

# Frontend Configuration (not used in tests, but kept for consistency)
FRONTEND_PORT=5174
FRONTEND_DEBUG_PORT=9230

# Environment
GO_ENV=test
NODE_ENV=test

# JWT Configuration
JWT_SECRET=test-secret-key
JWT_EXPIRE_HOURS=24

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173
